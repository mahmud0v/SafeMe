<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/app_bar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="?actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/padding_standard">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                android:padding="@dimen/padding_small"
                android:src="@drawable/ic_arrow_back" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAppBarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium_title"
                android:paddingHorizontal="@dimen/padding_middle"
                android:text="@string/change_password"
                android:textColor="@color/white"
                android:textSize="@dimen/text_title_size" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/app_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="@dimen/padding_standard">

            <TextView
                android:id="@+id/old_password_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/old_password"
                android:textColor="@color/text_regular_color"
                android:textSize="@dimen/text_regular_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                 />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/old_password_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                app:layout_constraintTop_toBottomOf="@id/old_password_text"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/old_password_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="password"
                    android:background="@drawable/bg_border_disable"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:textCursorDrawable="@drawable/cursor"
                    android:nextFocusForward="@id/new_password_edit"
                    android:paddingHorizontal="@dimen/padding_standard"
                    android:paddingVertical="@dimen/padding_standard"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_regular_size"
                    app:boxBackgroundMode="outline" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/new_password_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_standard"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/new_password"
                android:textColor="@color/text_regular_color"
                android:textSize="@dimen/text_regular_size"
                app:layout_constraintLeft_toLeftOf="@id/old_password_layout"
                app:layout_constraintTop_toBottomOf="@id/old_password_layout" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/new_password_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                app:layout_constraintTop_toBottomOf="@id/new_password_text"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/new_password_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="password"
                    android:background="@drawable/bg_border_disable"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:imeOptions="actionNext"
                    android:textCursorDrawable="@drawable/cursor"
                    android:inputType="textPassword"
                    android:nextFocusForward="@id/re_new_password_edit"
                    android:paddingHorizontal="@dimen/padding_standard"
                    android:paddingVertical="@dimen/padding_standard"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_regular_size"
                    app:boxBackgroundMode="outline" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/re_new_password_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_standard"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/re_new_password"
                android:textColor="@color/text_regular_color"
                android:textSize="@dimen/text_regular_size"
                app:layout_constraintLeft_toLeftOf="@id/new_password_layout"
                app:layout_constraintTop_toBottomOf="@id/new_password_layout" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/re_new_password_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                app:layout_constraintTop_toBottomOf="@id/re_new_password_text"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/re_new_password_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="password"
                    android:background="@drawable/bg_border_disable"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:imeOptions="actionDone"
                    android:textCursorDrawable="@drawable/cursor"
                    android:inputType="textPassword"
                    android:paddingHorizontal="@dimen/padding_standard"
                    android:paddingVertical="@dimen/padding_standard"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_regular_size"
                    app:boxBackgroundMode="outline" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/allReadyMemberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/roboto_regular"
                android:foreground="?attr/selectableItemBackground"
                android:paddingVertical="@dimen/padding_very_small"
                android:text="@string/forgot_password"
                android:textColor="@color/text_regular_color"
                android:textSize="@dimen/text_regular_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/re_new_password_layout" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_standard"
                android:background="@drawable/bg_button"
                android:enabled="false"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textSize="@dimen/text_small_size"
                app:backgroundTint="@null"
                app:layout_constraintTop_toBottomOf="@id/allReadyMemberButton" />

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="48dp"
                android:visibility="gone"
                android:layout_height="48dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>