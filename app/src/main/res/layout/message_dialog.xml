<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/dialog_back"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:id="@+id/dialog_logo"
        android:src="@drawable/safeme_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="340dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Internet ulanmagan nima qilish kerak"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium_title"
        android:textSize="22sp"
        android:layout_marginTop="26dp"
        android:id="@+id/dialog_text"
        />
    
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        app:cornerRadius="8dp"
        android:text="Davom etish"
        android:id="@+id/dialog_btn"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="@dimen/text_regular_big_size"
        android:paddingStart="35dp"
        android:layout_marginTop="18dp"
        android:paddingEnd="35dp"
        android:backgroundTint="@color/logo_color"
        app:layout_constraintTop_toBottomOf="@id/dialog_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_btn"
        app:layout_constraintLeft_toLeftOf="@id/dialog_btn"
        app:layout_constraintRight_toRightOf="@id/dialog_btn"
        />


</androidx.constraintlayout.widget.ConstraintLayout>