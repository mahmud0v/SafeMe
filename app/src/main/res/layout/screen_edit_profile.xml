<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main"
        android:orientation="vertical"
        tools:context=".presentation.ui.screen.main.EditProfileScreen">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/padding_standard">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="@dimen/padding_small"
                    android:src="@drawable/ic_arrow_back" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAppBarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium_title"
                    android:paddingHorizontal="@dimen/padding_middle"
                    android:text="@string/edit_profile"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_title_size" />

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_standard"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/padding_standard">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvFirstName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/first_name"
                            android:textColor="@color/text_regular_color"
                            android:textSize="@dimen/text_regular_size" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:background="@drawable/bg_border_disable"
                            android:hint="@string/first_name"
                            android:fontFamily="@font/roboto_medium_title"
                            android:imeOptions="actionNext"
                            android:inputType="textPersonName"
                            android:padding="@dimen/padding_standard"
                            android:textColorHint="@color/hint_color"
                            android:textSize="@dimen/text_regular_size" />

                        <TextView
                            android:id="@+id/tvLastName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/last_name"
                            android:layout_marginTop="@dimen/margin_standard"
                            android:textColor="@color/text_regular_color"
                            android:textSize="@dimen/text_regular_size" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:background="@drawable/bg_border_disable"
                            android:hint="@string/last_name"
                            android:fontFamily="@font/roboto_medium_title"
                            android:imeOptions="actionNext"
                            android:inputType="textPersonName"
                            android:padding="@dimen/padding_standard"
                            android:textColorHint="@color/hint_color"
                            android:textSize="@dimen/text_regular_size" />


                        <TextView
                            android:id="@+id/tvDateOfBirthTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/date_of_birth"
                            android:layout_marginTop="@dimen/margin_standard"
                            android:textColor="@color/text_regular_color"
                            android:textSize="@dimen/text_regular_size" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"

                            >
                            <com.vicmikhailau.maskededittext.MaskedEditText
                                android:id="@+id/etDateOfBirth"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edit_text_height"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:background="@drawable/bg_border_disable"
                                android:hint="@string/hint_mask"
                                android:inputType="date"
                                app:mask="##.##.####"
                                android:fontFamily="@font/roboto_medium_title"
                                android:imeOptions="actionDone"
                                android:padding="@dimen/padding_standard"
                                android:textColorHint="@color/hint_color"
                                android:textSize="@dimen/text_small_size" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_marginEnd="@dimen/margin_very_small"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="true"
                                android:id="@+id/calendar_id"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_calendar"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:padding="@dimen/padding_small"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <TextView
                            android:id="@+id/tvWhoTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_standard"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/who_are_you_this_baby"
                            android:textColor="@color/text_regular_color"
                            android:textSize="@dimen/text_regular_size" />




                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:paddingStart="@dimen/padding_standard"
                            android:layout_marginTop="@dimen/margin_small"
                            android:background="@drawable/bg_border_disable"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/parent_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:spinnerMode="dropdown" />

                        </RelativeLayout>



                        <TextView
                            android:id="@+id/tvRegion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_standard"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/region"
                            android:textColor="@color/text_regular_color"
                            android:textSize="@dimen/text_regular_size" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:paddingStart="@dimen/padding_standard"
                            android:layout_marginTop="@dimen/margin_small"
                            android:background="@drawable/bg_border_disable"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/region_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:spinnerMode="dropdown" />

                        </RelativeLayout>
                        <TextView
                            android:id="@+id/tvDistrict"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_standard"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/district"
                            android:textColor="@color/text_regular_color"
                            android:textSize="@dimen/text_regular_size" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:paddingStart="@dimen/padding_standard"
                            android:layout_marginTop="@dimen/margin_small"
                            android:background="@drawable/bg_border_disable"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/district_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:spinnerMode="dropdown" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tvMFY"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_standard"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/mfy"
                            android:textColor="@color/text_regular_color"
                            android:textSize="@dimen/text_regular_size" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:paddingStart="@dimen/padding_standard"
                            android:layout_marginTop="@dimen/margin_small"
                            android:background="@drawable/bg_border_disable"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/mfy_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:spinnerMode="dropdown" />

                        </RelativeLayout>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_standard"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvEducation"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="start"
                                android:text="@string/gender"
                                android:textColor="@color/text_regular_color"
                                android:textSize="@dimen/text_regular_size" />

                            <LinearLayout
                                android:id="@+id/llMan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/margin_big">

                                <androidx.appcompat.widget.AppCompatCheckBox
                                    android:id="@+id/isMan"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginEnd="@dimen/margin_small"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="@string/man"
                                    android:textColor="@color/text_regular_dark_color"
                                    android:textSize="@dimen/text_regular_size" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llWoman"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatCheckBox
                                    android:id="@+id/isWoman"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginEnd="@dimen/margin_small"
                                    />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="@string/woman"
                                    android:textColor="@color/text_regular_dark_color"
                                    android:textSize="@dimen/text_regular_size" />

                            </LinearLayout>

                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.core.widget.NestedScrollView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:background="@drawable/bg_button"
                    android:enabled="false"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_small_size"
                    app:backgroundTint="@null"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progress"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/margin_huge"
        style="?android:attr/progressBarStyleLarge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />






</androidx.constraintlayout.widget.ConstraintLayout>
