<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_middle"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="@dimen/padding_standard">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivInspector"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/RoundedCorner4r" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium_title"
            android:maxLines="2"
            android:layout_marginStart="@dimen/margin_middle"
            android:text="Закиров Нуриддин Абдухамидович"
            android:textColor="@color/text_title_color"
            android:textSize="@dimen/text_regular_big_size"
            app:layout_constraintStart_toEndOf="@+id/ivInspector"
            app:layout_constraintTop_toTopOf="@+id/ivInspector" />

        <TextView
            android:id="@+id/tvDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_regular_size"
            android:text="“Кушбеги” MFY profilaktka inspektori"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginStart="@dimen/margin_middle"
            app:layout_constraintStart_toEndOf="@+id/ivInspector"
            app:layout_constraintBottom_toBottomOf="@+id/ivInspector"
            android:textColor="@color/text_regular_color"/>

        <View
            android:id="@+id/line"
            app:layout_constraintTop_toBottomOf="@+id/ivInspector"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_standard"
            android:background="@color/line_gray_color"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPhoneIcon"
            android:layout_width="wrap_content"
            android:paddingVertical="@dimen/padding_very_small"
            android:layout_marginTop="@dimen/margin_standard"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line"
            android:src="@drawable/ic_phone_green"/>

        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium_title"
            android:maxLines="2"
            android:layout_marginStart="@dimen/margin_middle"
            android:text="97-430-10-44"
            android:textColor="@color/text_title_color"
            android:textSize="@dimen/text_regular_big_size"
            app:layout_constraintTop_toTopOf="@+id/ivPhoneIcon"
            app:layout_constraintStart_toEndOf="@+id/ivPhoneIcon"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_standard"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/ivPhoneIcon"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCall"
                android:layout_weight="1"
                android:background="@drawable/bg_button_green"
                android:layout_width="0dp"
                app:icon="@drawable/ic_phone_white"
                app:iconGravity="textStart"
                app:backgroundTint="@null"
                android:text="@string/calling"
                android:textAllCaps="false"
                android:foreground="?attr/selectableItemBackground"
                android:textSize="@dimen/text_small_size"
                android:layout_marginEnd="@dimen/margin_standard"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTelegram"
                android:layout_width="0dp"
                android:background="@drawable/bg_button"
                app:backgroundTint="@null"
                android:layout_weight="1"
                android:textAllCaps="false"
                app:icon="@drawable/ic_telegram"
                app:iconGravity="textStart"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/telegram"
                android:textSize="@dimen/text_small_size"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>