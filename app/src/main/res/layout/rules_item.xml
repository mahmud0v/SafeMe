<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rules_item_back"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginTop="@dimen/margin_big"
    android:id="@+id/rules_layout"
    android:layout_height="wrap_content">

   
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/rule_img_height"
        android:layout_marginEnd="@dimen/margin_small"
        app:cardCornerRadius="@dimen/small_card_corner"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/rule_img"
            android:src="@drawable/cyber"
            />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        style="@style/TitleTextViewStyle.RulesText"
        tools:text="@string/about_us_desc"
        android:textAlignment="center"
        android:layout_width="160dp"
        android:layout_gravity="center"
        android:maxLines="2"
        android:id="@+id/rules_text"
        android:layout_marginTop="@dimen/margin_small_3"
        />


</LinearLayout>