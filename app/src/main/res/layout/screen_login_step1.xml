<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:padding="@dimen/padding_standard"
    tools:context=".presentation.ui.screen.LoginStep1Screen">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/padding_standard">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_standard"
                        android:fontFamily="@font/roboto_medium_title"
                        android:text="@string/add_information_about_your_child"
                        android:textColor="@color/text_title_color"
                        android:textSize="@dimen/text_title_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvDateOfChild"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_standard"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/date_of_birth_of_child"
                        android:textColor="@color/text_regular_color"
                        android:textSize="@dimen/text_regular_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etDateOfChildLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        app:hintEnabled="false"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvDateOfChild">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etDateOfChild"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:background="@drawable/bg_border_disable"
                            android:drawableEnd="@drawable/ic_calendar"
                            android:foreground="?attr/selectableItemBackground"
                            android:hint="@string/enter_date_of_birth"
                            android:inputType="textPersonName"
                            android:padding="@dimen/padding_standard"
                            android:textColor="@color/text_regular_color"
                            android:textColorHint="@color/hint_color"
                            android:textSize="@dimen/text_small_size" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/chbIsBornEarly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_standard"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/etDateOfChildLayout" />

                    <TextView
                        android:id="@+id/tvCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/baby_born_prematurely"
                        android:textColor="@color/text_regular_dark_color"
                        android:textSize="@dimen/text_regular_size"
                        app:layout_constraintBottom_toBottomOf="@+id/chbIsBornEarly"
                        app:layout_constraintStart_toEndOf="@+id/chbIsBornEarly"
                        app:layout_constraintTop_toTopOf="@+id/chbIsBornEarly" />

                    <TextView
                        android:id="@+id/tvNameOfChild"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_standard"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/name_of_child"
                        android:textColor="@color/text_regular_color"
                        android:textSize="@dimen/text_regular_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/chbIsBornEarly" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etNameOfChildLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        app:hintEnabled="false"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvNameOfChild">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etNameOfChild"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_border_disable"
                            android:hint="@string/enter_your_child_name"
                            android:inputType="textPersonName"
                            android:padding="@dimen/padding_standard"
                            android:textColor="@color/text_regular_color"
                            android:textColorHint="@color/hint_color"
                            android:textSize="@dimen/text_small_size" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_standard"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/etNameOfChildLayout">

                        <TextView
                            android:id="@+id/tvEducation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="start"
                            android:text="@string/gender"
                            android:textColor="@color/text_regular_color"
                            android:textSize="@dimen/text_regular_size" />

                        <LinearLayout
                            android:id="@+id/llMan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_big">

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/isMan"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="@dimen/margin_small"
                                android:checked="true"
                                android:clickable="false" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/man"
                                android:textColor="@color/text_regular_dark_color"
                                android:textSize="@dimen/text_regular_size" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llWoman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/isWoman"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="@dimen/margin_small"
                                android:clickable="false" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/woman"
                                android:textColor="@color/text_regular_dark_color"
                                android:textSize="@dimen/text_regular_size" />

                        </LinearLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <TextView
                        android:id="@+id/tvWhoAreYouThisBaby"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_standard"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/who_are_you_this_baby"
                        android:textColor="@color/text_regular_color"
                        android:textSize="@dimen/text_regular_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/llGender" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etWhoAreYouThisBabyLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        app:hintEnabled="false"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvWhoAreYouThisBaby" >

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etWhoAreYouThisBaby"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_border_disable"
                            android:drawableEnd="@drawable/ic_expand_more"
                            android:foreground="?attr/selectableItemBackground"
                            android:hint="@string/select"
                            android:inputType="textPersonName"
                            android:padding="@dimen/padding_standard"
                            android:textColor="@color/text_regular_color"
                            android:textColorHint="@color/hint_color"
                            android:textSize="@dimen/text_small_size"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llOr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_big"
                        android:gravity="center_vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/etWhoAreYouThisBabyLayout">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#E6EAF0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_standard"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/or"
                            android:textColor="@color/text_regular_color"
                            android:textSize="@dimen/text_regular_size"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/etRegion" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#E6EAF0" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOneId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_big"
                        android:background="@drawable/bg_button_pink"
                        android:foreground="?attr/selectableItemBackground"
                        android:text="@string/download_with"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_small_size"
                        android:fontFamily="@font/roboto_regular"
                        app:backgroundTint="@null"
                        app:icon="@drawable/ic_one_id"
                        app:iconGravity="textEnd"
                        app:layout_constraintTop_toBottomOf="@+id/llOr"
                        tools:ignore="RtlHardcoded" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_standard"
                        android:background="@drawable/bg_button"
                        android:foreground="?attr/selectableItemBackground"
                        android:text="@string/continuee"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_small_size"
                        android:fontFamily="@font/roboto_regular"
                        app:backgroundTint="@null"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btnOneId" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:visibility="gone"
                app:layout_constraintBaseline_toBottomOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>