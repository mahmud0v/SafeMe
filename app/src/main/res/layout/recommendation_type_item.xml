<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rec_layout"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginStart="@dimen/margin_standard"
    android:layout_marginEnd="@dimen/margin_standard"
    android:background="@drawable/rec_item_back"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="58dp">


        <ImageView
            android:id="@+id/rec_icon"
            android:layout_width="@dimen/rec_width"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="@dimen/rec_height"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/margin_standard"
            android:src="@drawable/explore" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/rec_text"
            app:layout_constraintLeft_toRightOf="@id/rec_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            style="@style/TitleTextViewStyle.RecommendText"
            android:layout_marginStart="@dimen/margin_middle_2"
            android:text="@string/safe_internet" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/margin_big"
            android:src="@drawable/arrow"
            />




</androidx.constraintlayout.widget.ConstraintLayout>